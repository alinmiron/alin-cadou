                        <item name="dataScope" xsi:type="string">fullname</item>
                        <item name="label" xsi:type="string" translate="true">Full Name</item>
                    </item>
                </argument>
            </filterInput>
            <filterInput name="email">
                <argument name="data" xsi:type="array">
